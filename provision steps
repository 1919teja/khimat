   50  sudo apt install postgresql-client -y
   53  sudo apt install postgresql postgresql-contrib -y
   54  sudo systemctl start postgresql
   55  sudo systemctl enable postgresql
   56  # Switch to postgres user
   57  sudo -i -u postgres
   58  # Create a database user (replace 'yourappuser' with desired username)
   59  createuser --interactive --pwprompt
   60  # Enter name of role to add: yourappuser
   61  # Enter password for new role: (enter a secure password)
   62  # Enter it again: (confirm password)
   63  # Shall the new role be a superuser? (y/n): n
   64  # Shall the new role be allowed to create databases? (y/n): y
   65  # Shall the new role be allowed to create more new roles? (y/n): n
   66  # Create a database for your application
   67  createdb worldquestrealm -O yourappuser
   68  # Exit postgres user shell
